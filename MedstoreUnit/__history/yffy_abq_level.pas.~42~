  StdCtrls, Buttons, Mask, Grids, DBGrids, ExtCtrls,ComCtrls,Data.DB;


type
  TFm_yffy_abq_level = class(TForm)
    DBGrid_yp: TDBGrid;
    Panel2: TPanel;
    Label1: TLabel;
    Edt_roomid: TEdit;
    edt_room: TEdit;
    print_previw: TCheckBox;
    Dbgrd_nurseunit: TDBGrid;
    Splitter1: TSplitter;
    RadioGroup1: TRadioGroup;
    cmbx_dept: TComboBox;
    BitBtn2: TBitBtn;
    btn_send: TBitBtn;
    btn_search: TBitBtn;
    btn_print: TBitBtn;
    StatusBar1: TStatusBar;
    RdGrp_yzlb: TRadioGroup;
    RdGrp_house: TRadioGroup;
    Label2: TLabel;
    Label4: TLabel;
    edt_sendno: TEdit;
    Label21: TLabel;
    cbb_yfbm: TComboBox;
    RG_MedClass: TRadioGroup;
