end;

function TFm_ypadd.CheckInput: boolean;
var ErrorMess:string;
label Error,Error1;
begin

if Ed_ypbh.text='' then
  begin
    ErrorMess:='请选择药品编号。';
    goto Error;
  end;

if Ed_ym.text='' then
  begin
    ErrorMess:='请输入药品名称。';
    goto Error;
  end;
if Edt_gg.text='' then
  begin
    ErrorMess:='请输入药品规格。';
    goto Error;
  end;
if ComBox_jx.ItemIndex<0 then
  begin
    ErrorMess:='请选择药品剂型。';
    goto Error;
  end;
if Trim(ComBox_zxdw.text)='' then
  begin
    ErrorMess:='请选择药房单位。';
    goto Error;
  end;
if Trim(ComBox_jldw.text)='' then
  begin
    ErrorMess:='请选择药库单位。';
    goto Error;
  end;
if ComBox_ypzl.ItemIndex<0 then
  begin
    ErrorMess:='请选择药品种类。';
    goto Error;
  end;
if Combox_yb.ItemIndex<0 then
  begin
    ErrorMess:='请选择药品医保类型。';
    goto Error;
  end;
if Edt_lsj.text='' then
  begin
    ErrorMess:='请输入药品零售价。';
    goto Error;
  end
else try
      strtofloat(Edt_lsj.text);
    except
      ErrorMess:='药品零售价输入错误。';
      application.MessageBox(pchar(ErrorMess),'信使',mb_ok);
      result:=true;
      exit;
    end;
if Edt_pym.text='' then
  begin
    ErrorMess:='请输入药品拼音码。';
    goto Error;
 end;


if Edt_ypjj.text='' then
  begin
    ErrorMess:='请输入药品进货价。';
    goto Error;
  end
else try
      strtofloat(Edt_ypjj.text);
    except
      ErrorMess:='药品进货价输入错误。';
      application.MessageBox(pchar(ErrorMess),'信使',mb_ok);
      result:=true;
      exit;
    end;

    if strtoint(GetComboxValue(CmbBx_lb,':',true))=2 then
    begin
      if strtoint(GetComboxValue(ComBox_kind,':',true))<>98 then
      begin
        application.MessageBox('类别为草药拆分类别必须选择【98:可拆分】！！','信息',32);
        result:=true;
        exit;
      end;
    end ;

{判断单位}
   If trim(ComBox_jldw.text)='' then
      begin
        showmessage('药库单位不能为空 ');
        result:=true;
        exit;
      end;

   If trim(ComBox_zxdw.text)='' then
      begin
        showmessage('药房单位不能为空 ');
        result:=true;
        exit;
      end;

 {  If trim(ComBox_cfzxdw.text)='' then
      begin
        showmessage('医嘱单位不能为空 ');
        result:=true;
        exit;
      end;}

 If trim(ComBox_jldw.text)=trim(ComBox_zxdw.text) then
 begin
   if Trim(Edt_hsb.text)<>'1' then
   begin
     ErrorMess:='药库单位与药房单位相同，药库单位/药房单位(比例)应该等于1。是否保存？';
     goto Error1;
   end;
 end
 Else
    begin
      if Trim(Edt_hsb.text)='1' then
      begin
        ErrorMess:='药库单位与药房单位不相同，药库单位/药房单位(比例)应该不等于1。是否保存？';
        goto Error1;
      end;
    end;

 Result:=false;
 Exit;
  Error:
  begin
    application.MessageBox(pchar(ErrorMess),'信使',mb_ok);
    result:=true;
    exit;
  end;
  Error1:
  begin
    if application.messagebox(pchar(ErrorMess),'信使',mb_yesno+MB_DEFBUTTON2+MB_ICONQUESTION)=idno  then
    begin
      result:=true;
      exit;
    end;
  end;
end;
procedure TFm_ypadd.Ed_hsbKeyPress(Sender: TObject; var Key: Char);
begin
  If key=#13 Then BBtn_save.SetFocus ;
end;

procedure TFm_ypadd.Ed_ymKeyPress(Sender: TObject; var Key: Char);
begin
  If (key=#13) and  (trim(Ed_ym.text)<>'') Then
  begin
    Search_Ym(Trim(Ed_ym.text),Trim(Edt_gg.text));
    Edt_pym.Text:=MakeSpellCode(AnsiString(Ed_ym.text), 0, 0);

  end;
end;

procedure TFm_ypadd.Ed_ggKeyPress(Sender: TObject; var Key: Char);
begin
   If key=#13 Then ComBox_ypzl.SetFocus ;
end;

